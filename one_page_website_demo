  <!-- JS (Original Animation Restored) -->
  <!-- ---------------------------------------------- -->
  <script>
    /* Rotating headline animation (original logic) */
    document.addEventListener("DOMContentLoaded", () => {
      const el = document.getElementById("animated-text");
      if (!el) return;

      const phrases = ["Results.", "Growth.", "Efficiency.", "Innovation.", "Intelligence."];
      let idx = 0;
      const animDur = 400;
      const delay = 2000;

      function spin(){
        el.classList.add("spin-out");
        setTimeout(()=>{
          idx = (idx + 1) % phrases.length;
          el.textContent = phrases[idx];
          el.classList.remove("spin-out");
          el.classList.add("spin-in");
          setTimeout(()=>el.classList.remove("spin-in"), animDur);
        }, animDur);
      }
      setInterval(spin, animDur + delay);
    });

    /* Mobile Menu */
    const toggle = document.getElementById("mobile-toggle");
    const overlay = document.getElementById("overlay");

    toggle.addEventListener("click", () => {
      const open = toggle.classList.toggle("active");
      overlay.classList.toggle("open", open);
    });

    document.querySelectorAll(".overlay-link").forEach(a =>
      a.addEventListener("click", () => {
        toggle.classList.remove("active");
        overlay.classList.remove("open");
      })
    );

    /* Smooth scrolling */
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener("click", e => {
        const t = document.querySelector(a.getAttribute("href"));
        if (t){
          e.preventDefault();
          t.scrollIntoView({behavior:"smooth"});
        }
      });
    });
  </script>
